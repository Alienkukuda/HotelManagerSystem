<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.entity">
    <class name="Message">
       	<id name="me_id" type="java.lang.Integer"/>
    	<property name="send_id" length="10" not-null="true"/>
 		<property name="receive_id" length="10" not-null="true"/> 
 		<property name="me_text" length="100" not-null="true"/>
 		<property name="me_time" length="20" not-null="true"/>
    </class>
</hibernate-mapping>