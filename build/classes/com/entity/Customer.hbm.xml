<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.entity">
    <class name="Customer">
       	<id name="c_id" type="java.lang.String"/>
    	<property name="c_name" length="20" not-null="true"/>
 		<property name="c_password" length="20" not-null="true"/> 
 		<property name="c_sex" length="20"/>
 		<property name="c_idnumber" length="18" not-null="true"/> 
 		<property name="c_phone" length="11" not-null="true"/> 
 		<property name="c_email" length="50"/> 
 		<property name="c_score" length="10"/>
 		<property name="c_money" length="10"/>
 		
    </class>
</hibernate-mapping>
